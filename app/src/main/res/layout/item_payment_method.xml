<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="method"
            type="com.example.dan.paymentapp.models.PaymentMethod" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginLeft="@dimen/items_card_margin_left"
        android:layout_marginRight="@dimen/items_card_margin_right"
        android:layout_marginTop="@dimen/items_card_margin_top"
        android:layout_marginBottom="@dimen/items_card_margin_bottom">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/items_rel_padding"
            android:background="@{method.isSelected ? @color/md_blue_500 : @color/white}">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_margin="@dimen/items_image_margin"
                android:layout_width="@dimen/payment_method_thumbnail_size"
                android:layout_height="@dimen/payment_method_thumbnail_size"
                tools:src="@drawable/ic_launcher_background"
                android:layout_centerVertical="true"
                bind:imageUrl="@{method.thumbnail}" />

            <TextView
                android:layout_toRightOf="@id/thumbnail"
                android:layout_toLeftOf="@id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/items_text_size"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/items_margin_left"
                android:textColor="@{method.isSelected ? @color/white : @color/md_grey_500}"
                android:text="@{method.name}"
                tools:text="Visa" />

            <ImageView
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_check_white_24dp"
                android:layout_margin="@dimen/items_image_margin"
                android:visibility="@{method.isSelected ? View.VISIBLE : View.INVISIBLE}"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</layout>
